{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "Classic",
    "paths": {
      "src/core/*": ["src/core/*"],
      "src/components/*": ["src/components/*"],
      "src/modules/*": ["src/modules/*"],
      "src/assets/*": ["src/assets/*"],
      "src/constants/*": ["src/constants/*"],
      "src/utils/*": ["src/utils/*"],
      "src/hooks/*": ["src/hooks/*"],
    }
  },
  "exclude": ["node_modules", "dist", "public"],
  "include": ["src/**/*"]
}